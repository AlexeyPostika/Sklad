<Window x:Class="PosBackup.FlexControls.FlexProgressBar.FlexProgressBarUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PosBackup.FlexControls.FlexProgressBar"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="{Binding ElementName=ProgressBarWindow, Path=TitleValue, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
        Height="90"
        Width="360"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource WindowStyleItem1}"
        x:Name="ProgressBarWindow"
        Closing="ProgressBarWindow_Closing"
        Loaded="ProgressBarWindow_Loaded"
        KeyDown="ProgressBarWindow_KeyDown"
        ResizeMode="NoResize" 
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ProgressBar Style="{DynamicResource ProgressBarStyle}" Minimum="0" Maximum="100" Name="pbStatus" Value="{Binding ElementName=ProgressBarWindow, Path=PbStatusValue, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Margin="15" IsIndeterminate="{Binding ElementName=ProgressBarWindow, Path=IsIndeterminate, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
    </Grid>
</Window>
