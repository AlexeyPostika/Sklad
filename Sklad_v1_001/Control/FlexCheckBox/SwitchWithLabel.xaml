<UserControl x:Class="Sklad_v1_001.Control.FlexCheckBox.SwitchWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sklad_v1_001.Control.FlexCheckBox"
             mc:Ignorable="d" 
             x:Name="control">
    <Grid Margin="0, 10, 10, 0" HorizontalAlignment="Left" Height="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ToggleButton x:Name="toggleButton"
                      Style="{DynamicResource ToggleSwitch}"
                      Checked="toggleButton_Checked"
                      Unchecked="toggleButton_Unchecked"
                      IsChecked="{Binding ElementName=control, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                      MouseEnter="toggleButton_MouseEnter"
        />
        <Label x:Name="toggleLabel" Style="{DynamicResource LabelStyle}" Content="{Binding ElementName=control, Path=LabelText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" />
    </Grid>
</UserControl>
