<UserControl x:Class="Sklad_v1_001.Control.FlexComboBox.ComboBoxTwoToWithLable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sklad_v1_001.Control.FlexComboBox"
             mc:Ignorable="d" 
             mc:Ignorable="d" Name="control">
    <Grid>
        <StackPanel>
            <local:ComboBoxWithLabel x:Name="ComboBox1"
                                     LabelText="{Binding ElementName=control, Path=LabelText1, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     IsRequired="{Binding ElementName=control, Path=IsRequired1, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <local:ComboBoxWithLabel x:Name="ComboBox2"
                                     LabelText="{Binding ElementName=control, Path=LabelText2, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     IsRequired="{Binding ElementName=control, Path=IsRequired2, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
