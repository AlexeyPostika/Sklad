<UserControl x:Class="Sklad_v1_001.Control.FlexDateTime.DateTimeDelete"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespaceSklad_v1_001.Control.FlexDateTime"             
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DatePicker Padding="0,0,30,0" Name="DatePicker" SelectedDateChanged="DatePicker_SelectedDateChanged"/>
        <Button  Name="button" HorizontalAlignment="Right" Click="button_Click">
                <Image Name="image" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="None" />
            </Button>
    </Grid>
</UserControl>
