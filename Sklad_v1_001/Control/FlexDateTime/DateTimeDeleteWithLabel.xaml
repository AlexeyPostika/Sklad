<UserControl
        x:Class="Sklad_v1_001.Control.FlexDateTime.DateTimeDeleteWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sklad_v1_001.Control.FlexDateTime"             
             mc:Ignorable="d" >
    <Grid Height="30" Margin="0, 10, 10, 0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Name="label" Margin="5,0,0,0" Width="100" Height="30"/>
            <local:DateTimeDelete x:Name="DateTimeDelete" Grid.Column="1" SelectedDateChangedClick="DateTimeDelete_SelectedDateChangedClick"/>
        </Grid>
    </Grid>
</UserControl>
