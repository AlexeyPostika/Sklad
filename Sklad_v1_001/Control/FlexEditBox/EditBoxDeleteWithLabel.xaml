<UserControl x:Class="Sklad_v1_001.Control.FlexEditBox.EditBoxDeleteWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sklad_v1_001.Control.FlexEditBox"            
             mc:Ignorable="d"
             x:Name="control">
    <Grid Height="30" Margin="0, 10, 3, 0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Name="label" Style="{DynamicResource LabelStyle}" Width="60" Height="30"/>
            <local:EditBoxDelete x:Name="EditBoxDelete" Grid.Column="1"  Text="{Binding ElementName=control, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ButtonTextChangedClick="EditBoxDelete_ButtonTextChangedClick" ButtonClearClick="EditBoxDelete_ButtonClearClick"/>
        </Grid>
    </Grid>
</UserControl>
