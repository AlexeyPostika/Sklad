<UserControl x:Class="Sklad_v1_001.Control.FlexGridControl.ImageWithCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sklad_v1_001.Control.FlexGridControl"
             mc:Ignorable="d" Name="Page">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Name="Image" Width="24" Height="24" Stretch="UniformToFill" Source="{Binding ElementName=Page, Path=ImageSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" RenderOptions.BitmapScalingMode="NearestNeighbor" />
        </StackPanel>
    </Grid>
</UserControl>
