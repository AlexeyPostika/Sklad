<UserControl x:Class="Sklad_v1_001.Control.FlexRadio.FlexRadioButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sklad_v1_001.Control.FlexRadio"
             mc:Ignorable="d" Name="control">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <WrapPanel Name="wrapPanel"  Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="label" Style="{DynamicResource LabelStyle}"  />
            <Label Name="required" Style="{DynamicResource LabelStyle}"  Margin="-9,0,0,0" FontSize="18" Height="30" Visibility="{Binding ElementName=control, Path=IsRequired, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Red" Content="*" HorizontalAlignment="Left"/>
            <RadioButton x:Name="YES"  Margin="0,7,0,0" Checked="YES_Checked" HorizontalAlignment="Center"/>
            <Label x:Name="YESlabel" Style="{DynamicResource LabelStyle}"  />
            <RadioButton x:Name="NO" Margin="0,7,0,0" Checked="NO_Checked" HorizontalAlignment="Center"/>
            <Label x:Name="NOlabel" Style="{DynamicResource LabelStyle}" />
        </WrapPanel>
    </Grid>
</UserControl>
