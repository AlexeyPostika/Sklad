<UserControl x:Class="Sklad_v1_001.Control.FlexTextBox.FlexLabelTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sklad_v1_001.Control.FlexTextBox"
             xmlns:res="clr-namespace:Sklad_v1_001.Properties"
             mc:Ignorable="d" x:Name="control">
    <Grid>
        <StackPanel Margin="3,0">
            <Label Name="LabelName" Style="{DynamicResource LabelStyle}"  Content="{Binding ElementName=control, Path=LabelText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <TextBox Name="DescriptionInfo" Style="{DynamicResource TextBoxStyle}" Text="{Binding ElementName=control, Path=Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                       IsEnabled="{Binding ElementName=control, Path=EnableTextBox, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                       Height="{Binding ElementName=control, Path=HeightTextBlock, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                       TextWrapping="Wrap"
                       Language="ru-ru" SpellCheck.IsEnabled="True"/>
        </StackPanel>
    </Grid>
</UserControl>
