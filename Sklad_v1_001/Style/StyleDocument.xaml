<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Sklad_v1_001.Style">

    <Style  x:Key="UsersPageWidth"  TargetType="{x:Type Page}" >
        <Style.Setters>
            <Setter Property="Background" Value="#FFFDFAFA"/>
            <Setter Property="Height" Value="918"/>
        </Style.Setters>
    </Style>

    <Style  x:Key="UsersControlWidth"  TargetType="{x:Type UserControl}" >
        <Style.Setters>
            <Setter Property="Background" Value="#FFFDFAFA"/>
            <Setter Property="Height" Value="918"/>
        </Style.Setters>
    </Style>

    <Style  x:Key="UsersControlColor"  TargetType="{x:Type UserControl}" >
        <Style.Setters>
            <Setter Property="Background" Value="#FFFDFAFA"/>
        </Style.Setters>
    </Style>


    <Style  x:Key="DataDocument"  TargetType="{x:Type DataGrid}" >
        <Style.Setters>
            <!--<Setter Property="TextBlock.TextAlignment" Value="Center" />-->
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style.Setters>
    </Style>
    <Style x:Key="NameCellStyle" TargetType="DataGridCell">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="NameRowStyle" TargetType="DataGridRow">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style  x:Key="Grid"  TargetType="{x:Type Grid}" >
        <Style.Setters>
            <!--<Setter Property="TextBlock.TextAlignment" Value="Center" />-->
            <!--<Setter Property="HorizontalAlignment" Value="Center" />-->
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style.Setters>
    </Style>

    <Style  x:Key="MenuControl"  TargetType="{x:Type UserControl}" >
        <Style.Setters>
            <Setter Property="Background" Value="#FF292933"/>
            <Setter Property="Height" Value="818"/>
            <Setter Property="Width" Value="230"/>
        </Style.Setters>
    </Style>
    
    <Style  x:Key="MenuButton"  TargetType="{x:Type UserControl}" >
        <Style.Setters>
            <Setter Property="Background" Value="#FF292933"/>
        </Style.Setters>
    </Style>

</ResourceDictionary>